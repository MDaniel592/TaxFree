{
  "manifest_version": 3,
  "name": "TAXFree",
  "version": "0.4.0.1",
  "author": "MDaniel",
  "description": "Discount the TAX/VAT applied to all products + Quick identification of Amazon products with shipping restrictions.",
  "homepage_url": "https://github.com/MDaniel592/TaxFree",
  "default_locale": "en",
  "icons": {
    "48": "img/ivafree-48.png",
    "96": "img/ivafree-96.png"
  },
  "action": {
    "browser_style": true,
    "default_icon": {
      "48": "img/ivafree-48.png",
      "96": "img/ivafree-96.png"
    },
    "default_title": "TAXFree Add-on",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.amazon.es/",
    "https://www.amazon.co.uk/",
    "https://www.amazon.fr/",
    "https://www.amazon.de/",
    "https://www.amazon.it/"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://www.amazon.es/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.de/*",
        "https://www.amazon.it/*"
      ],
      "css": [
        "css/loader.css",
        "css/products.css"
      ],
      "js": [
        "content_scripts/taxfree.js",
        "content_scripts/search.js"
      ],
      "run_at": "document_start"
    }
  ]
}